@model BioLab_Diagnostics.Models.Departamentos

@{
    ViewData["Title"] = "Añadir nuevo departamento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/site.css" />
<div class="container" style="padding:2%; padding-left:4%;">
    <div class="row">
        <div class="col-md-12">           
            <form asp-action="Create" class="row g-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-md-6 fw-light text-secondary" style="width:45%; margin-right:7%; margin-bottom:30%;">
                    <label asp-for="Nombre" class="form-label"></label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="col-md-6 fw-light text-secondary" style="width:45%; margin-bottom:30%;">
                    <label asp-for="Descripcion" class="form-label">Descripción</label>
                    <input asp-for="Descripcion" class="form-control" />
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>
                <div class="col-12 d-flex justify-content-end pe-4">
                    <button type="submit" class="btn btn-primary me-1 mt-1 fw-bold " style="background-color:forestgreen;">Confirmar</button>
                    <a asp-action="Index" asp-controller="Pruebas" class="btn btn-light me-2 mt-1 " style="color:#0d6efd; border:1px solid #0d6efd;">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>
